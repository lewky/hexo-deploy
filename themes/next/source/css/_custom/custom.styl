/* -----------start：页面底部相关---------- */

/* 页面右下角的返回顶部按钮 */
.back-to-top {
    line-height: 1.5;
    right: 10px;
    padding-right: 5px;
    padding-left: 5px;
    padding-top: 2.5px;
    padding-bottom: 2.5px;
    background-color: rgba(111, 66, 193, 0.78);
    border-radius: 5px;
    box-shadow: 0px 0px 10px 0px rgba(0, 0, 0, 0.35);
}
.back-to-top.back-to-top-on {
    bottom: 10px;
}

/* 消除Hosted by的超链底部线条 */
.footer-custom a {
    border-bottom: 0;
}

/* 文章底部标签样式 */
.post-tags a {
    display: inline-block;
    padding: 0 15px;
    border-radius: 2px;
    border-bottom: none;
    text-align: center;
    color: rgba(255,255,255,0.8);
    &:hover {
        color: #fff;
        box-shadow: 0 4px 8px rgba(0,0,0,0.26);
    }
}

/* 文章底部标签的颜色 */
.post-tags a:nth-child(n+1) {
    background:#8bc34a;
}
.post-tags a:nth-child(n+2) {
    background:#673ab7;
}
.post-tags a:nth-child(n+3) {
    background:#ff9800;
}
.post-tags a:nth-child(n+4) {
    background:#f44336;
}
.post-tags a:nth-child(n+5) {
    background:#00abc0;
}
.post-tags a:nth-child(n+6) {
    background:#2196f3;
}

/* -----------end：页面底部相关---------- */


